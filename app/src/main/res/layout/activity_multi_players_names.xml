<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageView
        android:id="@+id/bgIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/player_one_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_320sdp"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/box_bg"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_260sdp"
                        android:layout_centerInParent="true">

                        <TextView
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Player One"
                            android:shadowColor="@color/shadow_green"
                            android:shadowDx="0"
                            android:shadowDy="10"
                            android:shadowRadius="2" />

                        <EditText
                            android:textSize="18dp"
                            android:textColor="#fff"
                            android:textColorHint="#e0dfdf"
                            android:id="@+id/player_one_name_edttxt"
                            android:background="@drawable/name_bg"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:hint="Enter Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:maxLength="10" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/player_names_back_btn"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/back"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/player_one_btn"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/next"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/player_two_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_320sdp"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/box_bg"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_260sdp"
                        android:layout_centerInParent="true">

                        <TextView
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Player Two"
                            android:shadowColor="@color/shadow_green"
                            android:shadowDx="0"
                            android:shadowDy="10"
                            android:shadowRadius="2" />

                        <EditText
                            android:textSize="18dp"
                            android:textColor="#fff"
                            android:textColorHint="#e0dfdf"
                            android:id="@+id/player_two_name_edttxt"
                            android:background="@drawable/name_bg"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:hint="Enter Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:maxLength="10" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/player_names_back_btn1"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/back"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/player_two_btn"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/next"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
