<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageView
        android:id="@+id/bgIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <ImageView
                android:id="@+id/offline_game_back_btn"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/back"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/ai_game_seting_gifview"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/setting"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/robotLay"
                android:background="@drawable/bgy"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.38">

                    <ImageView
                        android:background="@drawable/person_bg"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:src="@drawable/user" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/player_two_txt"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/player_two_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Robot"
                    android:layout_weight="0.14"
                    android:fontFamily="@font/poppins_medium" />

                <LinearLayout
                    android:gravity="top|center_vertical|center_horizontal|center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.23">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/player_two_won_txt"
                        android:background="@drawable/scorey"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:text="6" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:weightSum="10"
            android:layout_weight="2.1">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="2.85">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_1"
                    android:tag="1"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_2"
                    android:tag="2"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_3"
                    android:tag="3"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="2.85">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_4"
                    android:tag="4"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_5"
                    android:tag="5"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_6"
                    android:tag="6"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="3">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_7"
                    android:tag="7"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_8"
                    android:tag="8"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/img_9"
                    android:tag="9"
                    android:background="@drawable/gbox_bg"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/playerLay"
                android:background="@drawable/bgb"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:gravity="bottom|center_vertical|center_horizontal|center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.38">

                    <ImageView
                        android:id="@+id/player_one_img"
                        android:background="@drawable/person_bg"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:src="@drawable/user" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/player_one_txt"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/player_one_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Player"
                    android:layout_weight="0.14"
                    android:fontFamily="@font/poppins_medium" />

                <LinearLayout
                    android:gravity="top|center_vertical|center_horizontal|center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.23">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/player_one_win_count_txt"
                        android:background="@drawable/scoreb"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:text="6" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>
</RelativeLayout>
